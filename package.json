{
	"name": "rokkit",
	"version": "1.0.0-next.29",
	"description": "",
	"main": "index.js",
	"scripts": {
		"clean": "rm -rf sites/rokkit/.vercel && find . -name 'vitest*timestamp*' | xargs rm",
		"prepublishOnly": "turbo run prepublishOnly",
		"build": "pnpm clean && turbo run build",
		"test": "turbo run test:ci",
		"coverage": "turbo run coverage",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{js,json,md,yml,yaml,svelte}\"",
		"prepare": "husky install",
		"upgrade": "pnpm clean && pnpm upgrade",
		"check-git": "if [ -n \"$(git status --porcelain)\" ]; then echo 'You have uncommitted changes or untracked files.' && exit 1; fi",
		"bump:next": "bumpp --no-tag --preid=next && turbo run release",
		"release": "pnpm check-git && bumpp && turbo run release",
		"release:next": "pnpm check-git && npm bump:next && turbo run release",
		"release:cs": "pnpm build && changeset pre enter next && changeset && changeset version && changeset publish && changeset pre exit && pnpm bump:next",
		"upgrade:all": "./scripts/upgrade.sh && pnpm upgrade",
		"coverage:lcov": "pnpm coverage && ./scripts/merge-lcov.sh"
	},
	"author": "Jerry Thomas<me@jerrythomas.name",
	"license": "MIT",
	"workspaces": [
		"packages/core",
		"packages/icons",
		"packages/input",
		"packages/form",
		"packages/markdown",
		"packages/chart",
		"packages/themes",
		"packages/layout",
		"packages/utils",
		"packages/tutorial"
	],
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"bumpp": "^8.2.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.8.0",
		"husky": "^7.0.4",
		"lcov-result-merger": "^3.3.0",
		"lint-staged": "^11.2.6",
		"madge": "^6.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1"
	},
	"lint-staged": {
		"*.{js,svelte}": "eslint --cache --fix",
		"*.{js,svelte,md,json}": "prettier --write"
	},
	"dependencies": {
		"turbo": "^1.9.9"
	}
}
