{
	"useTabs": true,
	"tabWidth": 2,
	"singleQuote": true,
	"semi": false,
	"trailingComma": "none",
	"printWidth": 100,
	"pluginSearchDirs": ["."],
	"overrides": [
		{
			"files": "*.svelte",
			"options": { "parser": "svelte", "svelteSortOrder": "options-scripts-markup-styles" }
		},
		{
			"files": ["*.md", "*.yml", "*.yaml", "*.sql", "*.ddl"],
			"options": { "useTabs": false }
		}
	]
}
