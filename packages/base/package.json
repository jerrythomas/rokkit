{
	"name": "@sparsh-ui/base",
	"version": "1.0.0",
	"description": "Base components for any app/site.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"release": "release-it --preRelease=beta",
		"upgrade": "pnpm upgrade"
	},
	"exports": {
		"./package.json": "./package.json",
		".": "./src/index.js",
		"./index.d.ts": "./dist/index.d.ts",
		"./theme.css": "./src/theme.css"
	},
	"devDependencies": {
		"@sparsh-ui/icons": "workspace:1.0.0",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.49",
		"@testing-library/svelte": "^3.1.3",
		"@vitest/ui": "~0.12.10",
		"d3-format": "^3.1.0",
		"d3-shape": "^3.1.0",
		"eslint": "^8.19.0",
		"eslint-config-shared": "workspace:1.0.0",
		"shared-config": "workspace:^1.0.0",
		"svelte": "^3.49.0",
		"typescript": "~4.6.4",
		"validators": "workspace:1.0.0",
		"vite": "^2.9.14",
		"vitest": "~0.12.10"
	}
}
