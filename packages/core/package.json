{
	"name": "@sparsh-ui/core",
	"version": "1.0.0",
	"description": "Utility functions, classes & actions used by the UI libraries.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"release": "release-it --preRelease=beta",
		"upgrade": "pnpm upgrade"
	},
	"exports": {
		"./package.json": "./package.json",
		".": "./src/index.js",
		"./index.d.ts": "./dist/index.d.ts",
		"./theme.css": "./src/theme.css"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^1.0.1",
		"@testing-library/svelte": "^3.1.3",
		"@types/d3-array": "^3.0.3",
		"@types/ramda": "^0.28.15",
		"@vitest/ui": "~0.12.10",
		"eslint": "^8.20.0",
		"eslint-config-shared": "workspace:1.0.0",
		"shared-config": "workspace:^1.0.0",
		"svelte": "^3.49.0",
		"typescript": "~4.6.4",
		"validators": "workspace:1.0.0",
		"vite": "^3.0.1",
		"vitest": "~0.12.10"
	},
	"dependencies": {
		"@lukeed/uuid": "^2.0.0",
		"d3-array": "^3.2.0",
		"ramda": "^0.28.0"
	}
}
