{
	"name": "@rokkit/core",
	"version": "1.0.0-next.20",
	"description": "Core components, actions and stores for svelte apps.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"prettier": "@jerrythomas/prettier-config",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ct": "playwright test -c playwright.config.js",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"upgrade": "pnpm upgrade"
	},
	"devDependencies": {
		"@jerrythomas/eslint-config-svelte": "^1.0.2",
		"@jerrythomas/prettier-config": "^1.0.0",
		"@sveltejs/vite-plugin-svelte": "^2.1.1",
		"@testing-library/svelte": "^3.2.2",
		"@vitest/coverage-istanbul": "^0.28.5",
		"@vitest/ui": "~0.12.10",
		"eslint": "^7.32.0",
		"jsdom": "^19.0.0",
		"shared-config": "workspace:*",
		"svelte": "^3.58.0",
		"typescript": "^4.9.5",
		"validators": "workspace:latest",
		"vite": "^4.3.3",
		"vitest": "~0.19.1"
	},
	"files": [
		"src/**/*.js",
		"src/**/*.svelte",
		"!src/mocks",
		"!src/**/*.spec.js"
	],
	"exports": {
		"./src": "./src",
		"./package.json": "./package.json",
		"./stores": "./src/stores/index.js",
		"./actions": "./src/actions/index.js",
		"./constants": "./src/constants.js",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js"
		}
	},
	"dependencies": {
		"ramda": "^0.28.0"
	}
}
