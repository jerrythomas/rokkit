{
	"name": "@rokkit/core",
	"version": "1.0.0-next.40",
	"description": "Core components, actions and stores for svelte apps.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "rm -rf dist && tsc .",
		"format": "prettier --write .",
		"lint": "eslint --fix .",
		"test:ct": "playwright test -c playwright.config.js",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"latest": "pnpm upgrade --latest && pnpm test:ci",
		"release": "tsc && pnpm publish --access public"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^2.4.3",
		"@testing-library/svelte": "^4.0.3",
		"@vitest/coverage-v8": "^0.33.0",
		"@vitest/ui": "~0.33.0",
		"jsdom": "^22.1.0",
		"shared-config": "workspace:*",
		"svelte": "^4.1.1",
		"typescript": "^5.1.6",
		"validators": "workspace:latest",
		"vite": "^4.4.7",
		"vitest": "~0.33.0"
	},
	"files": [
		"src/**/*.js",
		"src/**/*.svelte",
		"!src/mocks",
		"!src/**/*.spec.js"
	],
	"exports": {
		"./src": "./src",
		"./package.json": "./package.json",
		"./constants": "./src/constants.js",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js"
		}
	},
	"dependencies": {
		"date-fns": "^2.30.0",
		"ramda": "^0.29.0"
	}
}
