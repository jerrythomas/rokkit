{
	"name": "@svelte-spice/markdown",
	"version": "1.0.0-next.1",
	"description": "Markdown based components for svelte apps.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"prettier": "@jerrythomas/prettier-config",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ct": "playwright test -c playwright.config.js",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"release": "release-it",
		"upgrade": "pnpm upgrade"
	},
	"devDependencies": {
		"@jerrythomas/eslint-config-svelte": "latest",
		"@jerrythomas/prettier-config": "latest",
		"@sveltejs/vite-plugin-svelte": "^1.2.0",
		"@testing-library/svelte": "^3.2.2",
		"@vitest/ui": "~0.12.10",
		"c8": "^7.12.0",
		"eslint": "^7.32.0",
		"jsdom": "^19.0.0",
		"release-it": "^15.5.0",
		"shared-config": "workspace:^1.0.0",
		"svelte": "^3.53.1",
		"typescript": "^4.9.3",
		"vite": "^3.2.4",
		"vitest": "~0.19.1"
	},
	"dependencies": {
		"@svelte-spice/core": "workspace:1.0.0-next.1",
		"marked": "^4.2.3",
		"prismjs": "^1.29.0"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./src/index.js"
		}
	}
}
