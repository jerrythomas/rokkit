{
	"name": "@sparsh-ui/markdown",
	"version": "1.0.0",
	"description": "Markdown based components.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"release": "release-it --preRelease=beta"
	},
	"exports": {
		"./package.json": "./package.json",
		".": "./src/index.js",
		"./index.d.ts": "./dist/index.d.ts"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.49",
		"@testing-library/svelte": "^3.1.3",
		"@types/marked": "^4.0.3",
		"@types/prismjs": "^1.26.0",
		"@vitest/ui": "~0.12.10",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"marked": "^4.0.17",
		"prettier": "^2.7.1",
		"prismjs": "^1.28.0",
		"svelte": "^3.48.0",
		"typescript": "~4.6.4",
		"validators": "workspace:1.0.0",
		"vite": "^2.9.13",
		"vitest": "~0.12.10"
	}
}
