{
	"name": "@rokkit/markdown",
	"version": "1.0.0-next.30",
	"description": "Markdown based components for svelte apps.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"format": "prettier --write .",
		"lint": "eslint --fix .",
		"test:ct": "playwright test -c playwright.config.js",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"latest": "pnpm upgrade --latest && pnpm test:ci",
		"release": "tsc && pnpm publish --access public"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^2.4.1",
		"@testing-library/svelte": "^3.2.2",
		"@types/prismjs": "^1.26.0",
		"@vitest/ui": "~0.31.1",
		"c8": "^7.14.0",
		"jsdom": "^22.1.0",
		"shared-config": "workspace:*",
		"svelte": "^3.59.1",
		"typescript": "^5.0.4",
		"vite": "^4.3.9",
		"vitest": "~0.31.1"
	},
	"dependencies": {
		"@rokkit/core": "workspace:*",
		"marked": "^5.0.3",
		"marked-gfm-heading-id": "^3.0.3",
		"marked-mangle": "^1.0.1",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0"
	},
	"files": [
		"src/**/*.js",
		"src/**/*.svelte",
		"!src/fixtures",
		"!src/**/*.spec.js"
	],
	"exports": {
		"./package.json": "./package.json",
		"./prism.css": "./src/prism.css",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js"
		}
	}
}
