{
	"name": "@jerrythomas/sentry",
	"version": "1.0.0",
	"description": "Drop in authentication for SvelteKit apps using popular auth kits",
	"type": "module",
	"svelte": "src/index.js",
	"files": [
		"src"
	],
	"prettier": "@jerrythomas/prettier-config",
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"release": "release-it --preRelease=beta"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jerrythomas/sentry.git"
	},
	"exports": {
		"./package.json": "./package.json",
		"./.npmignore": "./.npmignore",
		"./global.css": "./global.css",
		"./sentry.svg": "./sentry.svg",
		".": {
			"import": "./src/index.js"
		},
		"./firebase": {
			"import": "./src/firebase.js"
		}
	},
	"keywords": [
		"svelte",
		"auth",
		"firebase",
		"supabase",
		"amplify",
		"auth0",
		"sentry",
		"guard"
	],
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jerrythomas/sentry/issues"
	},
	"homepage": "https://github.com/jerrythomas/sentry#readme",
	"devDependencies": {
		"@jerrythomas/eslint-config-svelte": "^1.0.0",
		"@jerrythomas/prettier-config": "^1.0.0",
		"@supabase/supabase-js": "^1.35.7",
		"@sveltejs/vite-plugin-svelte": "^1.0.9",
		"@vitest/ui": "~0.18.1",
		"auto-changelog": "^2.4.0",
		"c8": "^7.12.0",
		"firebase": "^9.12.1",
		"js-yaml": "^4.1.0",
		"shared-config": "workspace:^1.0.0",
		"supabase": "^0.5.0",
		"svelte": "^3.52.0",
		"typescript": "^4.8.4",
		"vite": "^3.1.8",
		"vitest": "~0.19.1",
		"windicss": "^3.5.6"
	},
	"publishConfig": {
		"access": "public"
	},
	"auto-changelog": {
		"unreleased": false
	},
	"dependencies": {
		"@svelte-spice/core": "workspace:1.0.0-next.0"
	}
}
