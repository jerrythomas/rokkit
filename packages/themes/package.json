{
	"name": "@svelte-spice/themes",
	"version": "1.0.0-next.0",
	"description": "Themes for use with svelte-spice components.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"prettier": "@jerrythomas/prettier-config",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ct": "playwright test -c playwright.config.js",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"release": "release-it",
		"upgrade": "pnpm upgrade"
	},
	"devDependencies": {
		"@jerrythomas/eslint-config-svelte": "latest",
		"@jerrythomas/prettier-config": "latest",
		"@sveltejs/vite-plugin-svelte": "^1.1.0",
		"@testing-library/svelte": "^3.2.2",
		"@vitest/ui": "~0.12.10",
		"c8": "^7.12.0",
		"eslint": "^7.32.0",
		"jsdom": "^19.0.0",
		"release-it": "^15.5.0",
		"svelte": "^3.52.0",
		"typescript": "^4.8.4",
		"vite": "^3.2.2",
		"vitest": "~0.19.1",
		"shared-config": "workspace:^1.0.0"
	},
	"exports": {
		"./package.json": "./package.json",
		"./minimal.scss": "./src/minimal.scss",
		"./material.scss": "./src/material.scss",
		".": {
			"import": "./src/index.js"
		}
	}
}
