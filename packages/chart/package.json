{
	"name": "@rokkit/chart",
	"version": "1.0.0-next.15",
	"description": "Components for making interactive charts.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "src/index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"upgrade": "pnpm upgrade"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@testing-library/svelte": "^3.2.2",
		"@vitest/ui": "~0.12.10",
		"eslint": "^8.33.0",
		"eslint-config-shared": "workspace:*",
		"js-yaml": "^4.1.0",
		"jsdom": "^19.0.0",
		"shared-config": "workspace:*",
		"svelte": "^3.55.1",
		"typescript": "^4.9.5",
		"vite": "^4.1.1",
		"vitest": "~0.19.1"
	},
	"dependencies": {
		"@rokkit/core": "workspace:*",
		"d3-array": "^3.2.2",
		"d3-collection": "^1.0.7",
		"d3-scale": "^4.0.2",
		"d3-shape": "^3.2.0",
		"date-fns": "^2.29.3",
		"ramda": "^0.28.0",
		"yootils": "^0.3.1"
	},
	"files": [
		"src/**/*.js",
		"src/**/*.svelte",
		"!src/fixtures",
		"!src/mocks",
		"!src/**/*.spec.js"
	],
	"exports": {
		"./src": "./src",
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js"
		}
	}
}
