{
	"name": "@rokkit/chart",
	"version": "1.0.0-next.62",
	"description": "Components for making interactive charts.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "rm -rf dist && tsc",
		"format": "prettier --write .",
		"lint": "eslint --fix .",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"latest": "pnpm upgrade --latest && pnpm test:ci",
		"release": "pnpm publish --access public"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@testing-library/svelte": "^4.0.5",
		"@vitest/coverage-v8": "^1.1.3",
		"@vitest/ui": "~1.1.3",
		"js-yaml": "^4.1.0",
		"jsdom": "^23.2.0",
		"shared-config": "workspace:*",
		"svelte": "^4.2.8",
		"typescript": "^5.3.3",
		"vite": "^5.0.11",
		"vitest": "~1.1.3"
	},
	"dependencies": {
		"@rokkit/atoms": "workspace:*",
		"@rokkit/core": "workspace:*",
		"@rokkit/molecules": "workspace:*",
		"@rokkit/stores": "workspace:*",
		"d3-array": "^3.2.4",
		"d3-collection": "^1.0.7",
		"d3-format": "^3.1.0",
		"d3-interpolate": "^3.0.1",
		"d3-scale": "^4.0.2",
		"d3-shape": "^3.2.0",
		"date-fns": "^3.1.0",
		"ramda": "^0.29.1",
		"yootils": "^0.3.1"
	},
	"files": [
		"src/**/*.js",
		"src/**/*.svelte",
		"!spec"
	],
	"exports": {
		"./src": "./src",
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js",
			"svelte": "./src/index.js"
		}
	}
}
